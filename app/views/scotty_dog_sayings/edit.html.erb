<h1>Editing Scotty Dog Saying</h1>

<% form_for(@scotty_dog_saying) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :saying, "Please put words in my mouth," %><br />
    <%= f.text_field :saying, :size => 80 %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @scotty_dog_saying %> |
<%= link_to 'Back', scotty_dog_sayings_path %>

