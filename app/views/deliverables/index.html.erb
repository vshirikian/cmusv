<h1>Listing deliverables</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Version</th>
    <th>Location uri</th>
    <th>Submission date</th>
    <th>Comments</th>
    <th>Task name</th>
  </tr>

<% @deliverables.each do |deliverable| %>
  <tr>
    <td><%=h deliverable.name %></td>
    <td><%=h deliverable.version %></td>
    <td><%=h deliverable.location_uri %></td>
    <td><%=h deliverable.submission_date %></td>
    <td><%=h deliverable.comments %></td>
    <td><%=h deliverable.task_name %></td>
    <td><%= link_to 'Show', deliverable %></td>
    <td><%= link_to 'Edit', edit_deliverable_path(deliverable) %></td>
    <td><%= link_to 'Destroy', deliverable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New deliverable', new_deliverable_path %>